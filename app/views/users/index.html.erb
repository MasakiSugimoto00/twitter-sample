<div class="wrapper">
  <p id="notice"><%= notice %></p>

  <h1>ユーザー一覧</h1>

  <table>
    <thead>
      <tr>
        <th>ニックネーム</th>
        <th>メール</th>
        <th>自己紹介</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nickname %></td>
          <td><%= user.email %></td>
          <td><%= user.desc %></td>
          <td><%= link_to 'プロフィール', user %></td>
          <td><%= link_to '編集', edit_user_path(user) %></td>
          <td><%= link_to '削除', user, method: :delete, data: { confirm: 'アカウントを削除してもよろしいでしょうか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>
